<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/Head"
            android:adjustViewBounds="true"
            android:foregroundGravity="center"
            android:scaleType="centerCrop"
            android:id="@+id/dialog_photo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Название:"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="160dp"
            android:layout_below="@+id/Head"/>

        <TextView
            android:hint="Название"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/Head"
            android:id="@+id/name_dialog" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Автор:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/dialog_photo"/>

        <TextView
            android:hint="Автор"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/dialog_photo"
            android:id="@+id/author_dialog"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Описание:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/author_dialog"/>

        <TextView
            android:hint="Описание"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_dialog"
            android:id="@+id/disc_dialog"/>


        <Button
            android:id="@+id/button_save"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg"
            android:textColor="@color/black"
            android:onClick="SaveDataToDB"
            android:layout_below="@+id/disc_dialog"
            android:layout_marginTop="20dp"
            android:text="Save"
            />
    </RelativeLayout>




</ScrollView>